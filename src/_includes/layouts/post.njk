---
layout: layouts/base.njk
---
<h1 class="post-title">{{ title }}</h1>

<time class="post-date" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>

<article class="article">
{{ content | safe }}
</article>

{% set nextPost = collections.posts | getNextCollectionItem(page) %}
{% set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{% if nextPost or previousPost %}
<hr>
<ul>
{% if nextPost %}<li class="post-link"><a href="{{ nextPost.url }}">Next: {{ nextPost.data.title }}</a></li>{% endif %}
{% if previousPost %}<li class="post-link"><a href="{{ previousPost.url }}">Previous: {{ previousPost.data.title }}</a></li>{% endif %}
</ul>
{% endif %}